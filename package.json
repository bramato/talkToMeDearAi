{
  "name": "talktomedeara",
  "version": "0.1.1",
  "description": "MCP server for text-to-speech using OpenAI TTS with intelligent MP3 caching for AI agent notifications",
  "main": "dist/index.js",
  "bin": {
    "talktomedeara": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "serve": "node dist/server.js",
    "setup": "node dist/setup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "cache:clear": "node dist/cache.js clear",
    "cache:stats": "node dist/cache.js stats"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "text-to-speech",
    "tts",
    "openai",
    "ai-agents",
    "audio",
    "notifications",
    "claude-code",
    "cursor"
  ],
  "author": "Marco <marco@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bramato/talkToMeDearAi.git"
  },
  "bugs": {
    "url": "https://github.com/bramato/talkToMeDearAi/issues"
  },
  "homepage": "https://github.com/bramato/talkToMeDearAi#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "ROADMAP.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "openai": "^4.0.0",
    "fs-extra": "^11.2.0",
    "crypto": "^1.0.1",
    "path": "^0.12.7",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "keytar": "^7.9.0",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  }
}
